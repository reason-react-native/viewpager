{
  "name": "@reason-react-native/viewpager",
  "version": "3.3.0",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react-native-linear-gradient": "~3.3.0"
  },
  "repository": "https://github.com/reason-react-native/viewpager.git",
  "license": "MIT",
  "keywords": [
    "rescript",
    "reason",
    "reasonml",
    "bucklescript",
    "react-native"
  ],
  "files": [
    "*.md",
    "bsconfig.json",
    "src/**/*.re",
    "src/**/*.js",
    "!src/**/*.bs.js"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build",
    "release": "npmpub"
  },
  "devDependencies": {
    "@react-native-community/viewpager": "~3.3.0",
    "bs-platform": "^5.2.0",
    "husky": "^1.3.0",
    "lint-staged": "^10.1.1",
    "npmpub": "^5.0.0",
    "prettier": "^1.18.0",
    "reason-react": "0.7.0",
    "reason-react-native": "0.60.1"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
